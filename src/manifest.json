{
  "manifest_version": 2,
  "name": "Prolific Assistant",
  "version": "__package.version__",

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "browser_action": {
    "default_title": "Prolific Assistant",
    "default_icon": "icon.png",
    "default_popup": "pages/popup.html"
  },

  "background": {
    "scripts": ["pages/background.js"],
    "persistent": true
  },

  "permissions": ["notifications", "storage", "tabs", "webRequest", "webRequestBlocking", "https://*.prolific.co/*"]
}
